<div class="col-xs-12">
  <div class="text-center">
    <h2><%= post.title %></h2>
    <h6><%= post.created_at.strftime('%b %d, %Y')  %></h6>
  </div>

  <div>
    <%= raw(post.body).truncate(400) %>
  </div>

  <div class="text-center">
    <%= link_to "READ MORE", post_path(post) %>
  </div>

  <br />
</div>
